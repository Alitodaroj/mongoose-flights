<%- include('../partials/header') %>

  <h3><%= flight.airport %></h3>
  <h3><%= flight.airline %></h3>
  <h3><%= flight.departs %></h3>
  <h3><%= flight.flightNo %></h3>
  <h3><%= flight.destination %></h3>
  <h3><%= flight.arrival %></h3>

  
  <form>
    <select name="airport">
      <option value="LAX">LAX</option>
      <option value="JFK">JFK</option>
      <option value="AUS">AUS</option>
      <option value="DEN">DEN</option>
    </select>
    <input type = "date">
    <input type = "submit" value = "Submit">
  </form>        

</section>

<form id="add-per-to-ticket" action="/flights/<%= flight._id %>/tickets" method="POST">
  <select name="ticketId">
    <%- tickets.map(t => 
      `<option value="${t._id}">${t.seat} $${t.price} ${t.flightNo}</option> `
    ) %>
  </select>
  <button type="submit">Tickets</button>
</form>
  
<br><br><h2>Destinations</h2>
<form id="add-destination" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <!-- <label>Destination:</label>
  <textarea name="content"></textarea> -->
  <label>Airport:
    <input type="text" name="airport">
  <label>Arrival:
    <input type="datetime-local" name="arrival">
  </label><br>
  <input type="submit" value="Add Destination">
</form>

  <%- include('../partials/footer') %>